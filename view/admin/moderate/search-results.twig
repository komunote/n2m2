<span class="ariane-header">
    <h1><a href="/admin/moderate">{{__("Modération")}}</a> -> <a href="/admin/moderate/photo">{{__("Modérations des photos")}}</a> -> {{__("Résultat de la recherche")}}</h1>
</span>

<div class="div-box-main"> 
    <span class="div-box">
        <span class="div-box-header">
            <h1>{{__("Résultat")}}</h1>
        </span>
        <div class="div-box-body">
            {% if result is defined %}  
                <table>
                    {% for item in result %}
                        <tr>
                            <td><h1>{{item.nickname}}</h1><p><img src="/photo/{{ item._id }}/thumb_{{item.pictures.public.1.filename}}" /></p></td>
                            <td><a href="/admin/moderate/photo/ok/{{ item._id }}" title="{{__("valider")}}">{{ __("valider") }}</a> </td>
                            <td><a href="/admin/moderate/photo/ko/{{ item._id }}" title="{{__("refuser")}}">{{ __("refuser") }}</a> </td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                <p>{{__("Aucun résultat")}}</p>
            {% endif %}
        </div>
    </span>
</div>
